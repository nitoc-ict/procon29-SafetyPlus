<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".Drive">

    <ImageView
        android:id="@+id/attention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/attention" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/overtaking"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/overtaking" />

            <ImageView
                android:id="@+id/slow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/slow" />

            <ImageView
                android:id="@+id/stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/stop" />

        </LinearLayout>

        <ImageView
            android:id="@+id/turnLeft"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/turnLeft" />

        <ImageView
            android:id="@+id/turnRight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/turnRight" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>